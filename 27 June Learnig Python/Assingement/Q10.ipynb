    "# printing the Pyramid\n",
    "\n",
    "def printPyramid(r):\n",
    "    for i in range(r):\n",
    "        print(f\"{(r-i-1)*\" \"}{(i*2+1)*\"*\"}\")\n",
    "        \n",
    "\n",
    "\n",
    "row = int(input(\"Enter the Number Of Rows\"))\n",
    "\n",
    "printPyramid(row)\n"
   ]
